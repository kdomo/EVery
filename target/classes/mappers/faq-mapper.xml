<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="faqMapper">

	<!-- 목록 조회 -->
	<select id="faqList" resultType="faqDTO">
		select  seq_faq, faq_title, faq_written_date
			from tbl_faq
			order by seq_faq
	</select>
	
	<select id="selectOne" resultType="faqDTO">
		select #{admin_id}, #{faq_title}, #{faq_content}, #{faq_written_date}
		from tbl_faq
		where seq_faq = #{seq_faq}
	</select>
	
	<insert id="insertFaq" parameterType="faqDTO">
		insert into tbl_faq values
			(#{seq_faq}, #{admin_id}, #{faq_title}, #{faq_content}, sysdate)
	</insert>
	
	<select id="searchByTitle" resultType="faqDTO">
		select #{seq_faq}, #{admin_id}, #{faq_title}, #{faq_written_date}
		from tbl_faq
		where #{faq_title} like %search%
	</select>
	
	<update id="modify" parameterType="faqDTO">
		update tbl_faq set
			faq_title = #{faq_title}, faq_content = #{faq_content}
			where seq_faq = #{seq_faq}
	</update>
	
	<delete id="delete">
		delete from tbl_faq
			where seq_faq = #{seq_faq}
	</delete>
</mapper>